        <record model="ir.ui.view" id="agricola.catalogos_fincas_tree">
            <field name="name">agricola.catalogos.fincas.tree</field>
            <field name="model">agricola.catalogos.fincas</field>
            <field name="arch" type="xml">
                <tree string="Fincas">
